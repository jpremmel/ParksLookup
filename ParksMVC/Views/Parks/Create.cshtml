@{
  Layout = "_Layout";
}

@using ParksMVC.Models
@model ParksMVC.Models.Park

<h1>Add a park</h1>

@using(Html.BeginForm())
{
  @Html.Label("Name", "Name: ")
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", required="required" })
  <br>
  @Html.Label("Location", "Location: ")
  @Html.TextBoxFor(model => model.Location, new { @class="form-control", required="required" })
  <br>
  @Html.Label("SquareMileage", "Area: ")
  <p>@Html.TextBoxFor(model => model.SquareMileage, new { @class="form-control", type="number" }) mi^2</p>
  <br>
  @Html.Label("Terrain", "Terrain: ")
  @Html.TextBoxFor(model => model.Terrain, new { @class="form-control" })
  <br>
  @Html.Label("Description", "Description: ")
  @Html.TextAreaFor(model => model.Description, new { @class="form-control" })
  <br>
  <input type="submit" value="Add Park" class="btn btn-success">
}